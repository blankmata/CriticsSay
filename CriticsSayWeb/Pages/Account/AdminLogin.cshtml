@page
@model CriticsSayWeb.Pages.Account.AdminLoginModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticate" : "_Layout";
}
<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <!-- Images -->
        <div class="col-md-4">
            <!-- Movie poster image 1 -->
            <img src="https://cdn.cinematerial.com/p/297x/3edzwhfn/fast-x-movie-poster-md.jpg?v=1678807508" alt="Fast and Furious Poster" class="img-fluid mb-2" width="200" height="400" />
            <!-- Movie poster image 2 -->
            <br />
            <img src="https://images.fineartamerica.com/images/artworkimages/mediumlarge/2/the-grinch-2018-b-movie-poster-prints.jpg" alt="Grinch Poster" class="img-fluid mb-2" width="200" height="400" />
        </div>

        <!-- Login Form -->
        <div class="col-md-4">
            <form method="post" class="border p-4 bg-light">
                <div class="text-danger" asp-validation-summary="All"></div>

                <!-- Sign In Title -->
                <div class="row m-2 justify-content-center">
                    <div class="col-12 text-center mb-4">
                        <h2>Admin Sign in</h2>
                    </div>
                </div>

                <!-- Email -->
                <div class="row m-2 justify-content-center">
                    <label asp-for="LoginUser.Email" class="form-label"></label>
                    <input type="email" class="form-control" asp-for="LoginUser.Email" />
                    <span asp-validation-for="LoginUser.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="row m-2 justify-content-center">
                    <label asp-for="LoginUser.Password" class="form-label"></label>
                    <input type="password" class="form-control" asp-for="LoginUser.Password" />
                    <span asp-validation-for="LoginUser.Password" class="text-danger"></span>
                    <div class="mt-2">
                        <a href="#">Forgot Password?</a>

                    </div>
                </div>

                <!-- Login Button -->
                <div class="row m-2 justify-content-center">
                    <button id="btnLogin" class="btn btn-primary">Sign in</button>

                </div>
            </form>
        </div>

        <!-- Images -->
        <div class="col-md-4">
            <div class="text-end">
                <!-- Movie poster image 3 -->
                <img src="https://originalvintagemovieposters.com/wp-content/uploads/2020/03/DIE-HARD-9051-scaled.jpg" alt="Die Hard Poster" class="img-fluid mb-2" width="200" height="400" />
                <!-- Movie poster image 4 -->
                <br />
                <img src="https://athenaposters.ca/wp-content/uploads/2019/12/PE160723-Lord-of-the-Rings-Movie-Poster.jpg" alt="Lord of the Rings Poster" class="img-fluid mb-2" width="200" height="400" />
            </div>
        </div>
    </div>
</div>

